FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

disk1
{
    type            actuationDiskSource;
    active          on;            //on/off switch
    selectionMode   cellSet;       //cellSet // points //cellZone
    cellSet         actuatorDisk;//cellSet name when selectionMode = cellSet

    actuationDiskSourceCoeffs
    {
        fieldNames  (U);
        diskDir     (1 0 0);   // orientation of the disk
        Cp          0.70;      // Cp
        Ct          1.38;       // Ct
        diskArea    0.10;         // disk area
        upstreamPoint (-1.0 0 0);
    }
}

momentumSource
{
    type            vectorExplicitSetValue;
    active          off;
    selectionMode   points;
    points
    (
        (0 1 0)
    );
    
    vectorExplicitSetValueCoeffs
    {
        injectionRate
        {
            U   (1 -1 0);
        }
    }
}

turbSourceExplicit
{
    type            scalarExplicitSetValue;
    active          off;
    selectionMode   cellSet;
    cellSet         actuatorDisk;

    scalarExplicitSetValueCoeffs
    {
        injectionRate
        {
            k           30.7;
            epsilon     1.5;
        }
    }
}

turbSourceSemiImplicit
{
    type            scalarSemiImplicitSource;
    active          off;
    selectionMode   cellSet;
    cellSet         actuatorDisk;

    scalarSemiImplicitSourceCoeffs
    {
        volumeMode      absolute; // specific
        injectionRateSuSp
        {
            k           (30.7 0);
            epsilon     (1.5  0);
        }
    }
}

